@model IEnumerable<LojaWeb.DTOs.DepartamentoDTO>

@{
    ViewData["Title"] = "Departamentos";
}
<!-- <h2>Departamento</h2> -->

    <div class="mt-4">
         <a asp-action="New" class="btn btn-primary">Novo</a>
    
    </div>

     <div class="card mt-4">
        <div class="card-header">
         Lista de Departamentos
     </div>

           <div class="card-body">
            <div class="row">
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            
          
            <th>
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
               
               
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
