@model IEnumerable<LojaWeb.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<!-- <h2>Vendedores</h2> -->

    <div class="mt-4">
         <a asp-action="New" class="btn btn-primary">Novo</a>
       
    </div>

     <div class="card mt-4">
        <div class="card-header">
         Lista de Vendedores
     </div>

           <div class="card-body">
            <div class="row">
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                Departamento
            </th>
          
            <th>
                Ações
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nome)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
